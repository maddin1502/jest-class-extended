{
	"compilerOptions": {
		"outDir": "dist/",
		"target": "ES6",
		"module": "CommonJS",
		"lib": [
			"ES2020",
			"DOM"
		],
		"noImplicitAny": true,
		"strict": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"declaration": true,
		"esModuleInterop": true
	},
	"include": ["src"]
}
